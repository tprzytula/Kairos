{
  "private": true,
  "workspaces": [
    "sources/*",
    "libs/*"
  ],
  "scripts": {
    "build": "yarn bundle && yarn package",
    "bundle": "rm -rf dist && esbuild ./sources/* --entry-names=[dir]/[name]/index --bundle --minify --sourcemap --platform=node --target=node20 --outdir=dist",
    "package": "cd dist && for f in * ; do ([ -d \"$f\" ] && cd $f && zip $f.zip *) ; done",
    "prettier": "prettier . --write",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "esbuild": "^0.25.2",
    "lerna": "^8.2.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier . --write"
    ]
  }
}
